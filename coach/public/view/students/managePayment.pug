extend base.pug
block content
    .container.mt-3
        .row
            .col-3 
                .card.border-danger
                    //- img.card-img-top.p-4.border-success(src="https://th.bing.com/th/id/OIP.gF2EAu1hgOCHVhYWQ2Ui-AHaKW?pid=ImgDet&rs=1", style="height:250px; "  alt="")
                    img.card-img-top.p-4.border-success(src="https://th.bing.com/th/id/R.366fbdec721b8e93644e153738054bce?rik=CtsJRMfDD477CA&riu=http%3a%2f%2fwww.allwrestlingsuperstars.com%2fwp-content%2fuploads%2f2014%2f12%2fBatista-Shouting.jpg&ehk=MEGGBLdAIWHNBGI7bMh%2bSjotGm5PxjaJcvxyiNt%2bzms%3d&risl=&pid=ImgRaw&r=0", style="height:250px; "  alt="")
                    .card-body 
                        h1.fs-4.card-title=student.name
                        p=student.email 
            .col-9 
               .container 
                    .card
                        .card-body 
                            h1.text-center.text-danger.h1 Manage Payment 
                            hr
                            br
                            table.table
                                tr 
                                    th Course Title
                                    th Fee
                                    th Payment Months
                                    th Status
                                    th Action
                                each x in studentPayment  
                                    tr 
                                        td=x.courseId.title
                                        td=x.amount
                                        td #{x.month}/#{x.year}
                                        td
                                            if x.status==0
                                                .text-danger Panding 
                                            else if x.status == -1
                                                .text-warning Requested 
                                            else if x.status == 1
                                                .text-success Paid
                                        td
                                            if x.status == 0
                                                a.btn.btn-danger.btn-sm(href=`/student/payment/manage/${x._id}/request`) Payment request  
                                            else if x.status == -1
                                                a.disabled.btn.btn-warning.btn-sm Payment requested 
                                            else 
                                                a.disabled.btn.btn-success.btn-sm Payment submited