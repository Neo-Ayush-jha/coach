doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title PHOTO
    body    
        .container 
            .row 
                .col-4 
                    form(action="/photo/isert", method="post", enctype = 'multipart/form-data') 
                        .mb-3 
                            label(for="") Image 
                            input.form-control(type="file" name="image")
                        .mb-3 
                            input.btn.btn-success.w-100(type="submit")
                .col-8 
                    .row
                        each value in data 
                            .col
                                img(src=`${'/photo'+value.image}` , style="height:200px;" alt="")                                