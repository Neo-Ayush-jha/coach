extend base.pug 
block content
    .row.mb-3 
        .col-8 
            h4.mt-1 Mange Students 
        .col-4 
            a.btn.btn-success(href="/admin/manage-students").float-end Export Data 
    .card
        .card-body 
            table.table.table-sm 
                tr  
                    th Name
                    th Father
                    th Contact
                    th Email
                    th Address
                    th Gender
                    th Password
                    th Education (currently) 
                    th Action
                each val in student
                    tr 
                    td=val.name
                    td=val.father
                    td=val.contact 
                    td=val.email
                    td=val.address
                    td=val.gender 
                    td=val.password  
                    td=val.education
                    td
                        a.btn.btn-danger.px-0(href="")
                            i.bi.bi-trash-fill 
                        a.btn.btn-success.ms-2.px-0(href=`/admin/student/${val._id}/view/`)
                            i.bi.bi-eye