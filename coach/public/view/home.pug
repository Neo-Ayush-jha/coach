extend base.pug
block content 
    .container-fluid 
            .row
                .col-4(style="height:100vh").bg-fuchsia-300
                    .row.mt-5
                        .col-10.mx-auto.mt-5 
                            .card.mt-5.bg-rose-100 
                                .card-body 
                                    h2.h2.card-title Student Login 
                                    form.mt-2(action="/student/login" method="post")  
                                        .mb-3 
                                            .form-floating 
                                                input.form-control(type="text" name="email" placeholder=" enter email")
                                                label(for="") Email/Mobile
                                        .mb-3 
                                            .form-floating 
                                                input.form-control(type="text" name="password" placeholder=" enter password")
                                                label(for="") Password 
                                        .mb-3 
                                            .form-floating 
                                                input.btn.btn-success.w-100.text-dark(type="submit")

                .col-8(style="height:100vh").bg-rose-100.gx-0.bg-dark
                    include nav.pug
                
                    